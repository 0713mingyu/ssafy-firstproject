<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ssafy.study">

	<select id="getAllStudy"
	resultType="com.ssafy.itda.itda_test.model.Study">
		SELECT * 
		FROM STUDY_T
	</select>
	
	<select id="getStudy"
	resultType="com.ssafy.itda.itda_test.model.Study">>
		SELECT * 
		FROM STUDY_T
		WHERE STID = #{stid}
	</select>
	
	<insert id="createStudy" 
	parameterType="com.ssafy.itda.itda_test.model.Study">
		INSERT INTO STUDY_T(STNAME, MAXPCNT, PCNT, STYPE, TYPEFK, TYPENAME, SGROUP, CONTENT, CAPTAIN)
		VALUES ( #{stname}, #{maxPcnt}, #{pcnt}, #{stype}, #{typeNk}, #{typeName}, #{sgroup}, #{content}, #{captain} ) 
	</insert>
	
	<delete id="deleteStudy" 
	parameterType="java.lang.Integer">
		DELETE FROM STUDY_T
		WHERE STID = #{stid}
	</delete>
	
</mapper>